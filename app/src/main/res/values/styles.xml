<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
	</style>

	<style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

	<style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


	<style name="ToolbarTitle">
		<item name="android:maxLines">1</item>
		<item name="android:ellipsize">end</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:fontFamily">sans-serif</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:textSize">@dimen/std_text_size</item>
		<item name="android:gravity">center_vertical</item>
	</style>

	<style name="DialogButton" parent="@style/Widget.AppCompat.Button.Borderless">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:background">@android:color/transparent</item>
		<item name="android:textColor">@color/colorAccent</item>
	</style>

	<style name="Clickable">
		<item name="android:clickable">true</item>
		<item name="android:focusable">true</item>
		<item name="android:foreground">?selectableItemBackground</item>
	</style>

	<style name="cvBoardItem" parent="Clickable">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="cardBackgroundColor">@color/white</item>
		<item name="cardCornerRadius">@dimen/corner_rad</item>
		<item name="cardElevation">@dimen/elevation_lvl_1</item>
	</style>

	<style name="BoardItemImage">
		<item name="android:layout_width">@dimen/card_color_box_size</item>
		<item name="android:layout_height">@dimen/card_color_box_size</item>
		<item name="android:background">@drawable/board_color_box</item>
		<item name="android:layout_margin">8dp</item>
	</style>

	<style name="BoardItemImageLand">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:background">@drawable/board_color_box</item>
	</style>

	<style name="CardItemColorBoxLabel">
		<item name="android:gravity">center</item>
		<item name="android:textSize">40sp</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">match_parent</item>
	</style>

	<style name="BoardItemName">
		<item name="android:maxLines">1</item>
		<item name="android:ellipsize">end</item>
		<item name="android:textSize">@dimen/std_text_size</item>
		<item name="android:padding">@dimen/std_padding</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">match_parent</item>
	</style>

	<style name="ButtonAddNewBoards">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_gravity">end|bottom</item>
		<item name="android:layout_margin">16dp</item>
		<item name="srcCompat">@drawable/ic_add_white_48dp</item>
	</style>

	<style name="RecyclerViewBoards">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:paddingBottom">90dp</item>
		<item name="android:clipToPadding">false</item>
	</style>

	<style name="BoardItemNameLand">
		<item name="android:maxLines">1</item>
		<item name="android:ellipsize">end</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">40dp</item>
		<item name="android:layout_gravity">bottom</item>
		<item name="android:background">@color/alpha40</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:paddingLeft">18dp</item>
		<item name="android:paddingRight">18dp</item>
		<item name="android:textSize">20sp</item>
		<item name="android:textColor">@color/white</item>
	</style>

	<style name="HeaderButton">
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:background">@android:color/transparent</item>
		<item name="layout_constraintDimensionRatio">1:1</item>
		<item name="android:padding">16dp</item>
		<item name="android:scaleType">fitCenter</item>
		<item name="android:adjustViewBounds">true</item>
	</style>

	<style name="Toolbar">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">?attr/actionBarSize</item>
		<item name="cardCornerRadius">0dp</item>
		<item name="cardBackgroundColor">@color/colorPrimary</item>
		<item name="cardElevation">@dimen/elevation_lvl_2</item>
	</style>

	<style name="CardItemIcon">
		<item name="android:layout_width">20dp</item>
		<item name="android:layout_height">20dp</item>
	</style>

	<style name="CardPartTitle">
		<item name="android:fontFamily">sans-serif-light</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:textSize">16sp</item>
	</style>

	<style name="EditableText">
		<item name="android:padding">0dp</item>
		<item name="android:background">@null</item>
		<item name="android:imeOptions">flagNoExtractUi|actionDone</item>
		<item name="android:inputType">textCapSentences|textMultiLine|textNoSuggestions</item>
		<item name="android:maxLength">2000</item>
		<item name="android:visibility">gone</item>
	</style>
</resources>