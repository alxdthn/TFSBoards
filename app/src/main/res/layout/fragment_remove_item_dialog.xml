<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:padding="16dp">

	<TextView
		android:id="@+id/txvRemoveItemDialogHeader"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textSize="18sp"
		android:lineSpacingExtra="16dp"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		tools:text="Delete:\nitem?" />

	<Button
		android:id="@+id/btnRemoveItemDialogAccept"
		style="@style/DialogButton"
		android:text="@string/delete"

		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/txvRemoveItemDialogHeader" />

	<Button
		android:id="@+id/btnRemoveItemDialogDismiss"
		style="@style/DialogButton"
		android:layout_marginEnd="32dp"
		android:text="@string/dialog_dismiss_button_title"
		app:layout_constraintEnd_toStartOf="@+id/btnRemoveItemDialogAccept"
		app:layout_constraintTop_toBottomOf="@+id/txvRemoveItemDialogHeader" />

</androidx.constraintlayout.widget.ConstraintLayout>